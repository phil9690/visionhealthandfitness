.row.expanded
  .trial-banner
    .row
      .small-12.columns
        %h2.underline Claim a free trial with us
        %p Enter your details to register for your free trial today

        .row
          .small-12.medium-6.medium-centered.columns
            = form_for(@trial) do |f|
              .small-12.columns
                = f.text_field :first_name, placeholder: 'first name'
              .small-12.columns
                = f.text_field :last_name, placeholder: 'last name'
              .small-12.columns
                = f.email_field :email, placeholder: 'email'
              .small-12.columns
                = f.text_field :contact_number, placeholder: 'contact number'
              = f.button 'Claim my free trial', class: "small-12 medium-6 button"

.row
  .small-12.columns
    %h1.underline Memberships


.row.vertical-spacing
  .small-12.columns
    .memberships
      .row.vertical-spacing
        .small-12.columns.monthly-memberships
          %h3.underline Monthly Memberships
          .small-12.medium-4.columns
            .membership-option
              .membership-title
                %h3 peak
              .membership-price
                %span £14.99
              .membership-details
                %ul
                  %li 12 months contract
                  %li Use of all facilities at all times
                  %li Includes 200 classes per month
              .membership-link
                %a.button{href: 'https://secure.ashbournemanagement.co.uk/amsv2/signup/default.aspx?fn=VSF1X'} join now

          .small-12.medium-4.columns
            .membership-option
              .membership-title
                %h3 platinum
              .membership-price
                %span £35
              .membership-details
                %ul
                  %li 12 months contract
                  %li Use of all facilities at all times
                  %li Over 200 classes per month including Boxing, MMA, Strength and Conditioning
              .membership-link
                %a.button{href: 'https://secure.ashbournemanagement.co.uk/amsv2/signup/default.aspx?fn=VSF1X'} join now


          .small-12.medium-4.columns
            .membership-option
              .membership-title
                %h3 flexi
              .membership-price
                %span £29.99
              .membership-details
                %ul
                  %li 12 months contract
                  %li Rolling 30 day contract
                  %li Use of all facilities at all times
                  %li Includes 200 classes per month
              .membership-link
                %a.button{href: 'https://secure.ashbournemanagement.co.uk/amsv2/signup/default.aspx?fn=VSF1X'} join now

      .row
        .small-12.columns.yearly-memberships
          %h3.underline Annual Memberships
          - @membership_options.each do |option|
            .small-12.medium-6.columns
              .membership-option
                .membership-title
                  %h3= option.name
                .membership-price
                  %span= "£#{option.price}"
                .membership-details
                  %ul
                    %li 12 months contract
                    %li Use of all facilities at all times
                    %li Includes 200 classes per month
                .membership-link
                  = link_to 'Join Now', new_membership_path(membership_option: option.id), class: 'button'


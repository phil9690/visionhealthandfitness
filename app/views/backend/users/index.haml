- provide(:title, 'All users')
.row
  .small-12.columns
    %h1 All users
.row
  .small-12.columns
    = link_to 'Add User', new_backend_user_path, class: 'button green'
.row
  .small-12.columns
    .table-scroll
      %table
        %thead
          %tr
            %th Name
            %th Email
            %th Actions
        %tbody
          - @users.each do |user|
            %tr
              %td= user.name
              %td= user.email
              %td
                .button.blue= link_to 'View', backend_user_path(user)
                .button.amber= link_to 'Edit', edit_backend_user_path(user)
                .button= link_to 'Delete', backend_user_path(user), :method => :delete, :confirm => "Are you sure ?"
